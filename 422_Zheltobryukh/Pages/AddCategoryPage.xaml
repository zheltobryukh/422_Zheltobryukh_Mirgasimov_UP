<Page x:Class="_422_Zheltobryukh.Pages.AddCategoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AddCategoryPage">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Название категории" Grid.Row="0" FontSize="20" Margin="10"/>
        <TextBox x:Name="TBCategoryName" Grid.Row="0" Margin="10,40,10,10"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Сохранить" Width="100" Margin="10"/>
            <Button Content="Очистить" Width="100" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
